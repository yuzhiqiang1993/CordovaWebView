<resources>
    <!-- Base application theme. -->
    <style name="Theme.CordovaWebContainer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--解决字母自动变大写的问题-->
        <item name="textAllCaps">false</item>
    </style>


    <style name="Theme.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:color">@color/white</item>
    </style>

    <style name="Theme.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:color">@color/white</item>

    </style>
</resources>